        .row-bordered>.col::before,
        .row-bordered>[class^="col-"]::before,
        .row-bordered>[class*=" col-"]::before,
        .row-bordered>[class^="col "]::before,
        .row-bordered>[class*=" col "]::before,
        .row-bordered>[class$=" col"]::before,
        .row-bordered>[class="col"]::before {
            content: "";
            position: absolute;
            right: 0;
            bottom: -1px;
            left: 0;
            display: block;
            height: 0;
            border-top: 1px solid rgba(24, 28, 33, 0.06);
        }

        .row-bordered>.col::after,
