        .row-bordered>[class$=" col"]::after,
        .row-bordered>[class="col"]::after {
            content: "";
            position: absolute;
            top: 0;
            bottom: 0;
            left: -1px;
            display: block;
            width: 0;
            border-left: 1px solid rgba(24, 28, 33, 0.06);
        }

        .ui-bg-cover {
            background-color: rgba(0, 0, 0, 0);
            background-position: center center;
            background-size: cover;
        }

        .ui-square {
